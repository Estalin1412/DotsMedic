<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"

    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitysNews.MainActivity"
    android:layout_marginVertical="64dp"
    android:layout_marginHorizontal="16dp"

    >
    <RelativeLayout
        android:id="@+id/blDots"
        android:layout_width="256dp"
        android:layout_height="256dp"

        android:radius="16dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:gravity="center"
        android:background="@drawable/rounded_button"
        >
        <ImageButton
            android:id="@+id/btDots"
            android:layout_width="192dp"
            android:layout_height="192dp"
            android:src="@drawable/logodots"
            android:scaleType="fitXY"
            android:background="@drawable/rounded_button"
            app:tint="@color/white"


            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="32dp"
        android:id="@+id/blSalud"
        android:layout_width="150dp"
        android:layout_height="150dp"


        app:layout_constraintTop_toBottomOf="@+id/blDots"
        app:layout_constraintEnd_toStartOf="@+id/blDatos"
        app:layout_constraintStart_toStartOf="parent"

        >
        <ImageButton
            android:id="@+id/btSalud1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/corazonfigura"
            android:scaleType="fitXY"
            android:backgroundTint="@color/MarineBlue"
            app:tint="@color/white"
            android:background="@drawable/rounded_button_card"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/blDatos"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:layout_marginTop="32dp"

        app:layout_constraintTop_toBottomOf="@+id/blDots"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/blSalud"

        >
        <ImageButton
            android:id="@+id/btDatos2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/libretar"
            android:scaleType="fitXY"
            android:backgroundTint="@color/MarineBlue"
            app:tint="@color/white"
            android:background="@drawable/rounded_button_card"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/blMedicina"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:layout_marginTop="16dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blSalud"
        app:layout_constraintEnd_toStartOf="@+id/blConsulta"

        >
        <ImageButton
            android:id="@+id/btMedicina3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pastilla"
            android:scaleType="fitXY"
            android:backgroundTint="@color/MarineBlue"
            app:tint="@color/white"
            android:background="@drawable/rounded_button_card"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/blConsulta"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:layout_marginTop="16dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blDatos"
        app:layout_constraintStart_toEndOf="@+id/blMedicina"

        >
        <ImageButton
            android:id="@+id/btConsulta4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/doctorfigura"
            android:scaleType="fitXY"
            android:backgroundTint="@color/MarineBlue"
            app:tint="@color/white"
            android:background="@drawable/rounded_button_card"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

